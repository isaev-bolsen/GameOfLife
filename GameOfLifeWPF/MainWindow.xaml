<Window x:Class="GameOfLifeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLifeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <ToolBar HorizontalContentAlignment="Stretch" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button>Step</Button>
            <Button>Start</Button>
            <Button>Clear</Button>
        </ToolBar>
        <ToolBar HorizontalContentAlignment="Stretch" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Label>Field Type</Label>
            <ComboBox x:Name="NewGameTypeSelector" MinWidth="96"/>
            <Label>Field Size</Label>
            <TextBox x:Name="U" MinWidth="20"/>
            <Label>X</Label>
            <TextBox x:Name="V" MinWidth="20"/>
        </ToolBar>
    </DockPanel>
</Window>
